{
  "compilerOptions": {
    "module": "esnext",           // or "es2020"
    "target": "esnext",
    "moduleResolution": "node",   // or "nodenext"
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["resources/js/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "resources/js/**/*"
  ],
  "exclude": [
    "node_modules", "public"
  ]
}
